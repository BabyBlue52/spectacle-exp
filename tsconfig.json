{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}